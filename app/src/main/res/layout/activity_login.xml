<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_da"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="139dp"
        android:layout_marginLeft="40dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/semiwhite"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/login_da"
        app:layout_constraintLeft_toRightOf="@+id/login_da"
        android:text="함께"
        android:textSize="25sp"
        android:padding="0dp"
        android:textColor="@color/semiwhite"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/login_bang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="방"
        app:layout_constraintTop_toBottomOf="@+id/login_da"
        app:layout_constraintLeft_toLeftOf="@+id/login_da"
        android:layout_marginTop="22dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/semiwhite"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/login_bang"
        app:layout_constraintLeft_toRightOf="@+id/login_bang"
        android:text="탈출을 즐겨봐요"
        android:textSize="25sp"
        android:padding="0dp"
        android:textColor="@color/semiwhite"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="338dp"
        android:layout_height="50dp"
        app:cardCornerRadius="4dp"
        android:elevation="0dp"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/login_bang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="#F3F3F3"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_editEmail"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:hint="이메일 주소"
            android:background="none"
            android:textSize="15sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/login_passwrapper"
        android:layout_width="338dp"
        android:layout_height="50dp"
        app:cardCornerRadius="4dp"
        android:elevation="0dp"
        android:layout_marginTop="158dp"
        app:layout_constraintTop_toBottomOf="@+id/login_bang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="#F3F3F3"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/login_editPassword"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:hint="비밀번호"
            android:background="none"
            android:textSize="15sp"
            android:autofillHints="password"
            />
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/login_searchId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="none"
        android:text="아이디 찾기"
        android:textColor="@color/semiwhite"
        android:textSize="12sp"
        android:gravity="center"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintRight_toLeftOf="@id/login_searchPass"
        app:layout_constraintTop_toTopOf="@id/login_searchPass"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/login_searchPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/login_passwrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:background="none"
        android:text="비밀번호 찾기"
        android:textColor="@color/semiwhite"
        android:textSize="12sp"
        android:gravity="center"
        android:minWidth="0dp"
        android:minHeight="0dp"
        />
    <Button
        android:id="@+id/login_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="none"
        android:text="회원가입"
        android:textColor="@color/semiwhite"
        android:textSize="12sp"
        android:gravity="center"
        android:minWidth="0dp"
        android:minHeight="0dp"
        app:layout_constraintTop_toTopOf="@id/login_searchPass"
        app:layout_constraintLeft_toRightOf="@+id/login_searchPass"
        android:layout_marginLeft="10dp"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="@color/semiwhite"
        app:layout_constraintTop_toTopOf="@+id/login_searchPass"
        app:layout_constraintBottom_toBottomOf="@+id/login_searchPass"
        app:layout_constraintLeft_toRightOf="@+id/login_searchId"
        app:layout_constraintRight_toLeftOf="@id/login_searchPass"
        />
    <View
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:background="@color/semiwhite"
        app:layout_constraintTop_toTopOf="@+id/login_searchPass"
        app:layout_constraintBottom_toBottomOf="@+id/login_searchPass"
        app:layout_constraintLeft_toRightOf="@+id/login_searchPass"
        app:layout_constraintRight_toLeftOf="@id/login_signUp"
        />
    <ImageButton
        android:layout_width="338dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/login_naverlogin"
        android:layout_marginBottom="20dp"
        />
    <ImageButton
        android:id="@+id/login_naverlogin"
        android:layout_width="338dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="75dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>